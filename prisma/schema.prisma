generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id              String   @id @default(uuid())
  name            String
  slug            String   @unique
  description     String
  price           Float
  discountPrice   Float?
  category        String
  color           String?
  images          String[]
  stock           Int      @default(0)
  brand           String?
  specifications  Json?    // { category, items: [{ key, value }] }[]
  tags            String[]
  isNewProduct    Boolean  @default(false)
  isFeatured      Boolean  @default(false)
  rating          Float    @default(0)
  reviewCount     Int      @default(0)
  ratings         Json?    // { userId, rating, createdAt, updatedAt }[]
  soldCount       Int      @default(0)
  viewCount       Int      @default(0)
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}
